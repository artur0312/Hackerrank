#include<iostream>
#include<algorithm>
#include<string>

using namespace std;

int main(){
  int size;
  cin>>size;
  int arr[100];
  for(int i=0;i<size;i++){
    cin>>arr[i];
  }
  int max_count=0;
  for(int i=0;i<size;i++){
    int x=arr[i];
    int y=-1;
    int count=1;
    for(int j=i+1;j<size;j++){ 
      if(y==-1){
	if(abs(x-arr[j])==1){
	  y=arr[j];
	  count++;
	}
	else if(arr[j]==x){
	  count++;
	}
	else{
	  break;
	}
      }
      else{
	if(arr[j]==x or arr[j]=y){
	  count++;
	}
	else{
	  break;
	}
      }
    }
      max_count=max(max_count,count);
    }
  cout<<max_count;
    
}
